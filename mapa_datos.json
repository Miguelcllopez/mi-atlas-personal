---
layout: null
---
[
  {% for viaje in site.viajes %}
    {% if viaje.latitud %}
    {
      "type": "Feature", 
      "properties": {
        "titulo": "{{ viaje.title | escape }}",
        "fecha": "{{ viaje.date | date: "%d/%m/%Y" }}",
        
        {% comment %} --- AQUÍ ESTÁ LA SOLUCIÓN DEL ENLACE ROTO --- {% endcomment %}
        "url": "{{ viaje.url | relative_url }}",
        
        "miniatura": "{{ viaje.miniatura | relative_url }}"
      },
      "geometry": {
        "type": "Point",
        "coordinates": [{{ viaje.longitud }}, {{ viaje.latitud }}]
      }
    }{% unless forloop.last %},{% endunless %}
    {% endif %}
  {% endfor %}
]