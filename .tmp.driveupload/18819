<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
  // Configuraci√≥n del Mapa
  var map = L.map('mapa-principal').setView([20, 0], 2);

  L.tileLayer('https://{s}.basemaps.cartocdn.com/rastertiles/voyager/{z}/{x}/{y}{r}.png', {
      attribution: '&copy; OpenStreetMap &copy; CARTO',
      maxZoom: 19
  }).addTo(map);

  // Carga de datos
  fetch("{{ '/mapa_datos.json' | relative_url }}")
      .then(res => res.json())
      .then(data => {
          const viajes = Array.isArray(data) ? data : data.features;
          
          viajes.forEach(v => {
              if (v.geometry && v.geometry.coordinates) {
                  const [lon, lat] = v.geometry.coordinates;
                  const props = v.properties;

                  if (lat && lon) {
                      L.marker([lat, lon]).addTo(map)
                       .bindPopup(`
                          <div style="text-align:center; min-width:160px;">
                              <img src="${props.miniatura}" style="width:100%; height:100px; object-fit:cover; border-radius:4px; margin-bottom:8px;">
                              <h3 style="font-size:1rem; margin:0 0 5px 0;">${props.titulo}</h3>
                              <a href="${props.url}" style="background:#007bff; color:white; padding:4px 10px; border-radius:4px; text-decoration:none; font-size:0.8rem; display:inline-block;">Ver Viaje</a>
                          </div>
                       `);
                  }
              }
          });
      })
      .catch(e => console.error("Error mapa:", e));
</script>